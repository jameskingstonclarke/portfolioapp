<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/project_post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/textColour"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/project_post_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/project_post_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-light"
        android:singleLine="true"
        android:text="description"
        android:textAlignment="center"
        android:textColor="@color/textColour" />

    <TextView
        android:id="@+id/project_post_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/project_post_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="206dp"
        android:fontFamily="sans-serif-light"
        android:singleLine="true"
        android:text="user"
        android:textAlignment="center"
        android:textColor="@color/textColour"
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/project_post_time"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/project_post_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="209dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="-3dp"
        android:fontFamily="sans-serif-light"
        android:singleLine="true"
        android:text="time"
        android:textAlignment="center"
        android:textColor="@color/textColour"
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/project_post_skills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/project_post_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="1dp"
        android:fontFamily="sans-serif-light"
        android:singleLine="true"
        android:text="skills: "
        android:textAlignment="center"
        android:textColor="@color/textColour"
        android:textSize="18sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/project_post_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        android:text="apply" />

</RelativeLayout>
